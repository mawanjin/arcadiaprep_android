<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/alertbig_new"
     >

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Finish this Question"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnNxtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="Goto the Next Question" />

    <Button
        android:id="@+id/btnShowCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNxtQuestion"
        android:layout_centerHorizontal="true"
        android:text="Show Correct Answers" />

</RelativeLayout>