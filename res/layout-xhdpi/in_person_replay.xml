<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:background="@drawable/tool_panel"
    android:orientation="horizontal" >
    
    <ImageButton  xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/inperson_replay_pause"
	    android:layout_width="@dimen/inperson_button_width"
        android:layout_height="@dimen/inperson_button_width"
        android:src ="@drawable/inperson_pause_play"        
        android:textColor = "@android:color/white"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center_vertical" 
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="@dimen/inperson_button_padding"
        android:background="#00000000"  
        android:scaleType="centerInside"   
	  />
	
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:visibility="gone"
        />
	
    <ProgressBar
        android:id="@+id/inperson_replay_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_gravity="center_vertical" 
	    android:gravity="center_vertical"
	    android:layout_marginLeft="@dimen/inperson_button_width"
	    android:visibility="gone"
         />
    
    <TextView 
     	android:id="@+id/inperson_replay_time"
     	android:layout_width="wrap_content"
     	android:layout_height="38dp"   
    	android:text="08:00"
	    android:textColor="@android:color/white" 
	    android:layout_gravity="center_vertical" 
	    android:gravity="center_vertical"
	    android:layout_marginLeft="5dp"
	    android:visibility="gone"
    />
    
    <ImageButton
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/inperson_replay_done"
	    android:layout_width="@dimen/inperson_button_width"
	    android:layout_height="@dimen/inperson_button_width"
	    android:layout_marginLeft="@dimen/inperson_button_width"
	    android:src="@drawable/inperson_stop"
	    android:background="#00000000"  
	    android:textColor="@android:color/white" 
	    android:layout_gravity="center_vertical"        	
	    android:padding="@dimen/inperson_button_padding"
	    android:layout_marginRight="24dp"
	    android:scaleType="centerInside"   
	    />
</LinearLayout>