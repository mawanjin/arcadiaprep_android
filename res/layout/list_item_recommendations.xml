<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- content -->
    <!-- item image -->

    <ImageView
        android:id="@+id/imageItem"
        android:layout_width="@dimen/main_list_icon_width"
        android:layout_height="@dimen/main_list_icon_height"      
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:contentDescription="" />

    <!-- item title -->

    <TextView
        android:id="@+id/infoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_weight="8"
        android:textColor="#000000"
        android:textSize="16dip" />

    <!-- price -->

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/setting_list_item_arrow" />
    
    <ImageView
        android:id="@+id/setting_list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:src="@drawable/into_icon" />

</LinearLayout>