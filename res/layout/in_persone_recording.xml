<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:background="@drawable/tool_panel"
    android:orientation="horizontal" >
    
    <ImageButton
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/inperson_record_stop"
        android:layout_width="@dimen/inperson_button_width"
        android:layout_height="@dimen/inperson_button_width"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:padding="@dimen/inperson_button_padding"
        android:scaleType="centerInside"
        android:src="@drawable/inperson_stop"
        android:textColor="@android:color/white" />
	
    <TextView 
     	android:id="@+id/inperson_record_time"
     	android:layout_width="50dp"
     	android:layout_height="@dimen/inperson_button_width"   
    	android:text="00:00"
	    android:textColor="@android:color/white" 
	    android:layout_gravity="center_vertical" 
	    android:gravity="center_vertical"
	    android:layout_marginRight="24dp" 
	    android:layout_toRightOf="@id/inperson_record_stop"
	    android:layout_marginLeft="24dp"
    />
    
</LinearLayout>